{{ form_start(form) }}
    {# {{ form_widget(form) }} #}
{# {{dump(form)}} #}
    {{ form_row(form.model) }}
    {{ form_row(form.description) }}
    {{ form_row(form.imageFile) }}
    {{ form_row(form.brand) }}
{# {{ dump(shoe) }} #}

    {% for price in form.prices %}
    <div class="container-fluid border border-black existing-price mb-3" id="{{ 'Tarif_N° ' ~ loop.index }}">
        {{ form_row(price.amount, {'label': 'Tarif'}) }}
        {{ form_row(price.size, {'label': 'Tailles choisies'}) }}
        <button role="button" class="btn btn-warning delete-price" data-id="{{ 'Tarif_N° ' ~ loop.index }}">
            Supprimer ce tarif
        </button>
    </div>
    {% endfor %}

    <div class="col">
        <button type="button" class="btn btn-primary add_item_link mt-3" data-collection-holder-class="prices">Ajouter un formulaire</button>

        {# the data-index attribute is required for the JavaScript code below #}
        <div class="prices pt-3 g-3"
            data-index="{{ form.prices|length > 0 ? form.prices|last.vars.name + 1 : 0 }}" data-prototype="{{ form_widget(form.prices.vars.prototype)|e('html_attr') }}"
        ></div>
    </div>

    <button class="btn-success btn">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
