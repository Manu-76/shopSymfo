{{ form_start(form) }}
    {# {{ form_widget(form) }} #}
{# {{dump(form)}} #}
    {{ form_row(form.model) }}
    {{ form_row(form.description) }}
    {{ form_row(form.imageFile) }}
    {{ form_row(form.brand) }}

    <div class="col">
        {# Ici le data-collection-holder-class doit avoir le même nom de class que la div suivante pour pouvoir afficher la div (ici prices) #}
        <button type="button" class="btn btn-primary add_item_link mt-3" data-collection-holder-class="prices">Ajouter un formulaire</button>

        {# l'attribut data-index est nécessaire pour pouvoir exécuter le code js #}
        <div class="prices pt-3 g-3" data-index="{{ form.prices|length > 0 ? form.prices|last.vars.name + 1 : 0 }}" data-prototype="{{ form_widget(form.prices.vars.prototype)|e('html_attr') }}"
        ></div>
    </div>

    <button class="btn-success btn">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
